{
    "version": "0.2.0",
    "configurations": [
    {
      "name": "Launch Angular",
      "type": "edge",
      "version": "dev",
      "request": "launch",
      "preLaunchTask": "npm: start",
      "url": "http://localhost:4500/",
      "webRoot": "${workspaceFolder}"
    },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:4300",
            "sourceMaps": true,
            "webRoot": "${workspaceRoot}"
        },
        {
            "type": "chrome",
            "request": "attach",
            "name": "Attach to Chrome",
            "port": 9222,
            "sourceMaps": true,
            "webRoot": "${workspaceRoot}"
        }
    ]
}
